section
    svg.header(width='100vw' viewBox='0 0 1085 296')
      path.path(d="M.2.4V242.1S514,358,1085,242.1V0Z")
    a.header-icon.pull-left(href="users") 
     img.user-logOut(src='assets/i-39.png', alt='')
    a.header-icon.pull-right 
     img.user-award(src='assets/i-33.png', alt='')
    h3.header-title(*ngIf="userdata.length > 1") Bienvenid@ {{userName}}
    img.user-img.center-block(src='assets/i-22.png', alt='')
section.row.week 
    .col-xs-4.flex-center
        button.btn.btn-default.btn-lg.arrow(type='button', aria-label='Left Align', (click)="back()") 
            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
    .col-xs-4.flex-center
        h2.week-day(*ngIf="weekData.length > 0")  {{weekData[day].value | date:'EEEE MMMM d'}}
    .col-xs-4.flex-center
        button.btn.btn-default.btn-lg.arrow(type='button', aria-label='Left Align', (click)="next()")
            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
section.row.user-week
    .col-xs-12.col-md-6.flex-center(*ngFor='let todo of todosView; let i = index;')
        a.btn.btn-default.btn-user( [routerLink]="['/detailTodo', userId, todo.key, day, daysKeys[i]]", role="button")
            img.todoImg(src='assets/i-29.png', alt='')
            p.todoName() {{todo.value.description}}

