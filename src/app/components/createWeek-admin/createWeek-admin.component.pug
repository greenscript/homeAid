section.row.hidden-xs
  section.col-xs-12
      section.col-xs-3.no-padding.desktop
          app-desktop-bar([adminId]="routeId")
      section.col-xs-9.no-padding.desktop-column
          svg.header(width='100vw' viewBox='0 0 1085 296')
              path.path(d="M.2.4V250.1S410,348,850,245.1V0Z")
          h1.header-title Manejar Semana
          .week
              .col-xs-4.flex-center
                  button.btn.btn-default.btn-lg.arrow(type='button', aria-label='Left Align', (click)="back()") 
                      span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
              .col-xs-4.flex-center
                  h2.week-day {{currentDay | date:'EEEE MMMM d'}}
              .col-xs-4.flex-center
                  button.btn.btn-default.btn-lg.arrow(type='button', aria-label='Left Align', (click)="next()")
                      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')

          .admin-week
              .col-md--1.flex-center.newTodoMobile
              a.newTodoBottom.button.btn.btn-default.btn-admin.btn-newTodo.flex-center( [routerLink]="['/newTodo', 0, currentDay | date:'EEEMMMd',  currentDayIndex]", [ngClass]="{'disable': pastDweller}") Nueva tarea
                  .col-xs-6
                  img.addBotton(src='assets/i-37.png', alt='')
              .col-md-6.flex-center.dayTodos(*ngFor='let todo of currentTodos | async')
                  a.btn-default.btn-card(href='/')
                      img.todoImg(src='assets/i-22.png', alt='')
                      p.todoName {{todo.description}}

