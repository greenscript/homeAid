section.col-xs-12.no-padding
    section.col-xs-2.no-padding.desktop
        app-desktop-bar([adminId]="routeId")
    section.col-xs-10.no-padding.desktop-column
        app-back
        svg.header(width='100%' viewBox='0 0 1085 296')
            path.path(d="M.2.4V242.1S514,358,1085,242.1V0Z")
        h1.header-title Manejar Semana
        .week
            .col-xs-4.flex-center
                button.btn.btn-default.btn-lg.arrow(type='button', aria-label='Left Align', (click)="back()") 
                    span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
            .col-xs-4.flex-center
                h2.week-day {{currentDay | date:'EEEE MMMM d' | capitalize}}
            .col-xs-4.flex-center
                button.btn.btn-default.btn-lg.arrow(type='button', aria-label='Left Align', (click)="next()")
                    span.glyphicon.glyphicon-chevron-right(aria-hidden='true')

        .admin-week.col-xs-12.no-padding.flex-center.flex-column
            .col-md--1.flex-center.newTodoMobile
            .btn-add
              .eff-4
              button(*ngIf="currentDay", [routerLink]="['/newTodo', 0, currentDay | date:'EEEMMMd',  currentDayIndex]") Nueva tarea 
                i.fa.fa-plus-circle.fa-lg 
            //a.newTodoBottom.button.btn.btn-default.btn-admin.btn-newTodo.flex-center(*ngIf="currentDay", [routerLink]="['/newTodo', 0, currentDay | date:'EEEMMMd',  currentDayIndex]") Nueva tarea
                .col-xs-6
                img.addBotton(src='assets/i-37.png', alt='')
            .col-md-6.flex-center.dayTodos(*ngFor='let todo of currentTodos | async')
                a.btn-default.btn-card([ngClass]="{'btn-card-completed': todo.status }")
                    img.todoImg([src]="todo.categoryImg", [popover]="todo.category", popoverTitle="Categoria de la tarea:", container="body", triggers="mouseenter:mouseleave")
                    p.todoName {{todo.description}}
                    p.todoName.pull-left Usuario asignado: {{todo.nameUser}}
                    i.fa.fa-check-circle-o.fa-3x.pull-right.icompleted([ngClass]="{'completed': todo.status }")
                        



    
