  section.col-xs-12.flex-center.newtodo-header
    h1.newtodo-title Nueva tarea
  section.row
    section.col-xs-12.col-sm-12.todo-container
      h4 Seleccione un usuario
        section.col-xs-12.flex-center.todo-user
          .col-xs-4(*ngFor="let user of usersdata")
            a(role="button", (click)="selectUser(user.key)")
              img.no-selected-ux([src]='user.value.avatar')

              
      h4 Seleccione la tarea
      section.col-xs-12.flex-center.todo-category
        div
          .col-xs-4.col-sm-4
            button.category-btn((click)='acomodar.show()')
              img.img-category(src='../../../assets/i-29.png')
